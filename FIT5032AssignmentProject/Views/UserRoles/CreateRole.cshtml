@{
    ViewBag.Title = "CreateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateRole</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new {@class = "test-danger"})

        <div class="form-group">
            <label class="control-label col-md-2">Role Name</label>
            <div class="col-md-10">
                @Html.Editor("RoleName", new {htmlAttributes = new {@class = "form-control", required = true}})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="CreateRole" class="btn btn-default"/>
            </div>
        </div>
    </div>
}