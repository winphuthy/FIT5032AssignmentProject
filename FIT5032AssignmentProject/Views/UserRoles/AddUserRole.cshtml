@{
    ViewBag.Title = "AddUserRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddUserRole</h2>

<div>
    @Html.ActionLink("Main Page", "Index")
</div>

@if (ViewBag.ErrorMessage != null)
{
    <h1>@ViewBag.ErrorMessage</h1>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr/>
    @Html.ValidationSummary(true, "", new {@class = "test-danger"})
    if (ViewBag.ErrorMessage == null)
    {
        <h3>
            @ViewBag.ErrorMessage
        </h3>
    }
    <div class="form-group">
        <label class="control-label col-md-2">Email</label>
        <div class="col-md-10">

            @Html.DropDownList("Email", (IEnumerable<SelectListItem>) ViewBag.UserList, "Select ...", htmlAttributes: new {@class = "form-control col-md-10"})

        </div>

    </div>


    <div class="form-group">
        <label class="control-label col-md-2">Role</label>
        <div class="col-md-10">

            @Html.DropDownList("Role", (IEnumerable<SelectListItem>) ViewBag.UserRole, "Select ...", htmlAttributes: new {@class = "form-control col-md-10"})

        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add to user" class="btn btn-default"/>
        </div>
    </div>
}